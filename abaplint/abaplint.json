{
  "global": {
      "files": "/src/**/*.*",
      "skipGeneratedGatewayClasses": true,
      "skipGeneratedPersistentClasses": true,
      "skipGeneratedFunctionGroups": true
  },
  "syntax": {
      "version": "v753",
      "errorNamespace": "",
      "globalConstants": [],
      "globalMacros": []
  },
  "dependencies": [
      {
          "url": "https://github.com/abaplint/deps",
          "folder": "/deps",
          "files": "/src/**/*.*"
      }
  ],
  "rules": {
      "avoid_use": {
          "define": true,
          "endselect": true,
          "execSQL": true,
          "kernelCall": true,
          "communication": true,
          "statics": true,
          "systemCall": true,
          "break": false,
          "defaultKey": false
      },
      "commented_code": false,
      "constructor_visibility_public": {
          "reason": "https://github.com/SAP/styleguides/blob/master/clean-abap/CleanABAP.md#if-your-global-class-is-create-private-leave-the-constructor-public"
      },
      "description_empty": false,
      "empty_statement": true,
      "empty_structure": {
          "loop": false,
          "if": false,
          "while": true,
          "case": true,
          "select": true,
          "do": true,
          "at": true
      },
      "exporting": false,
      "functional_writing": false,
      "global_class": true,
      "identical_form_names": true,
      "if_in_if": false,
      "inline_data_old_versions": true,
      "line_length": {
          "length": 300,
          "reason": "https://github.com/SAP/styleguides/blob/master/clean-abap/CleanABAP.md#stick-to-a-reasonable-line-length"
      },
      "max_one_statement": false, 
      "message_exists": false,
      "method_length": {
          "statements": 1300,
          "ignoreTestClasses": false,
          "errorWhenEmpty": false,
          "reason": "https://github.com/SAP/styleguides/blob/master/clean-abap/CleanABAP.md#keep-methods-small"
      },
      "mix_returning": {
          "reason": "https://github.com/SAP/styleguides/blob/master/clean-abap/CleanABAP.md#use-either-returning-or-exporting-or-changing-but-not-a-combination"
      },
      "msag_consistency": true,
      "nesting": {
          "depth": 10,
          "reason": "https://github.com/SAP/styleguides/blob/master/clean-abap/CleanABAP.md#keep-the-nesting-depth-low"
      },
      "obsolete_statement": {
          "refresh": false,
          "compute": true,
          "add": false,
          "subtract": false,
          "multiply": true,
          "move": false,
          "divide": true,
          "requested": false,
          "occurs": true
      },
      "parser_error": false,
      "preferred_compare_operator": false,
      "short_case": {
          "length": 0,
          "allow": []
      },
      "superclass_final": true,
      "unreachable_code": false,
      "use_new": false,
      "when_others_last": true,
      "ambiguous_statement": false,
      "begin_end_names": true,
      "check_transformation_exists": true,
      "check_syntax": false,
      "form_tables_obsolete": true,
      "tabl_enhancement_category": true,
      "implement_methods": true,
      "local_testclass_location": true,
      "main_file_contents": true,
      "rfc_error_handling": false,
      "indentation": false,
      "sequential_blank": false,
      "empty_line_in_statement": false,
      "form_no_dash": true,
      "check_abstract": true,
      "no_public_attributes": false,
      "abapdoc": false,
      "prefer_returning_to_exporting": false,
      "keep_single_parameter_on_one_line": false,
      "allowed_object_naming": true,
      "fully_type_constants": true,
      "check_comments": {
          "allowEndOfLine": true
      },
      "check_text_elements": false,
      "newline_between_methods":{
          "logic": "less",
          "count": 3
      },
      "check_include": true,
      "xml_consistency": true,
      "prefix_is_current_class": false
  }
}